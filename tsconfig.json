{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "rootDirs": ["./src", "./tests"],
    "paths": {
      "*": ["node_modules/*"],
      "@app/*": ["./src/app/*"],
      "@assets/*": ["./src/assets/*"],
      "@common/*": ["./src/common/*"],
      "@electron/*": ["./src/electron/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ],
  "exclude": [
    //"tests",
  ]
}
